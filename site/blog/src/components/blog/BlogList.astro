---
import type { CollectionEntry } from "astro:content";
import BlogSummaryCard from "./BlogSummaryCard.astro";

interface Props {
  posts: CollectionEntry<"blog">[];
}

const { posts } = Astro.props;
---

<ul class="flex flex-col gap-8">
  {
    posts.map((post) => {
      return (
        <li>
          <BlogSummaryCard post={post} />
        </li>
      );
    })
  }
</ul>
